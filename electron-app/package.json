{
  "name": "tax-prep-tracker",
  "description": "A finance tracking tool designed to help quickly generate financial reports.",
  "author": "Ethan Reddick",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^23.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.3.0-alpha.4",
    "mysql": "^2.18.1",
    "mysql2": "^3.10.1",
    "pdfkit": "^0.15.0"
  },
  "build": {
    "productName": "Tax Prep Tracker",
    "publish": [
      {
        "provider": "github",
        "owner": "ethanreddick",
        "repo": "tax-prep-tracker"
      }
    ],
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/.bin",
      "!**/*.d.ts",
      "!**/*.map",
      "!**/tsconfig.json",
      "!**/tslint.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Tax Prep Tracker"
    }
  }
}
